{
	"compilerOptions": {
		/* Base Options: */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,

		"moduleDetection": "force",
		"isolatedModules": true,

		/* Strictness */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,

		"module": "Preserve",

		"noEmit": true,

		"outDir": "./dist",
		"rootDir": "./src",
		"types": ["node"]
	},
	"include": ["src/**/*"]
}
