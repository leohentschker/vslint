{
	"compilerOptions": {
		/* Base Options: */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,

		"moduleDetection": "force",
		"isolatedModules": true,

		/* Strictness */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,

		"module": "NodeNext",

		/* AND if you're building for a library: */
		"declaration": true,

		/* AND if you're building for a library in a monorepo: */
		"declarationMap": true
	}
}
